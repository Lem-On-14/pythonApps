# -*- coding: utf-8 -*-
<MenuWidget@BoxLayout>:
    BoxLayout:
        orientation: 'vertical'

        canvas.before:
            Color:
                rgba: 0.7,0.6,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            size_hint_y: 0.1
            text: 'Select Menu'
            text_size: self.size
            halign: 'center'
            valign: 'top'
            font_size: 30
            color: [0, 0, 0, 1]

        BoxLayout:
            padding: 20
            spacing: 20

            canvas.before:
                Color:
                    rgba: 248/255, 248/255, 255/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            SelectMenuButtonAction:
                background_normal:''
                background_color:(0.2, 0.7, 0.5, 1)
                text: 'Hello World'
                color: [0, 0, 0, 1]
                font_size: 30
                on_press:self.setExecPath('HelloWorld')
                on_release:app.root.gotoMakeCode()

            SelectMenuButtonAction:
                background_normal:''
                background_color:(0.2, 0.7, 0.5, 1)
                text: '掛け算99'
                color: [0, 0, 0, 1]
                font_size: 30
                on_press:self.setExecPath('TimesTables')
                on_release:app.root.gotoMakeCode()
