# -*- coding: utf-8 -*-
<TitleWidget>:
    canvas.before:
        Color:
            rgba: [1, 1, 1, 1]
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        bold: True
        color: [0, 0, 0, 1]
        font_size: 24
        pos_hint: {"center_x":0.5, "center_y":0.75}
        text: "Fallen games. (Tetris-like)"
    Label:
        bold: True
        color: [0, 0, 0, 1]
        font_size: 60
        pos_hint: {"center_x":0.5, "center_y":0.65}
        text: "10 Plus"
    Button:
        background_normal: ""
        background_color: [0, 0, 0, 1]
        color: [1, 1, 1, 1]
        font_size: 36
        pos_hint: {"center_x":0.5, "center_y":0.4}
        size_hint: [None, None]
        size: [200, 100]
        text: "Start."
        on_press: root.gotoPlayDisplay()
